<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hccake.ballcat.admin.modules.sys.mapper.SysUserRoleMapper">
	<!-- 通过用户ID查询其关联的角色ID-->
	<select id="getRoles" resultType="com.hccake.ballcat.admin.modules.sys.model.entity.SysRole">
        SELECT
            r.id, r.name, r.code
        FROM
       		sys_user_role ur
		left join
			sys_role r
		on r.code = ur.role_code
        WHERE ur.user_id = #{userId}
        and r.deleted = 0
    </select>

	<!--新建用户角色关联关系-->
	<insert id="insertUserRoles">
		insert into
			sys_user_role (user_id, role_code)
		values
		<foreach collection="roleCodes" item="roleCode" separator=",">
			( #{userId}, #{roleCode} )
		</foreach>
	</insert>

	<!--根据UserId删除用户角色关联关系-->
	<delete id="deleteByUserId">
		DELETE FROM sys_user_role WHERE user_id = #{userId}
	</delete>


</mapper>
